      h1(style='margin-top:100px') Registered Customers
      div
         div
            form.form-inline.my-2.my-lg-0
               input.form-control.mr-sm-2(type="search" placeholder="Search" aria-label="Search")
               button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Search

      table.table.small.table-hover
         thead.thead-dark
            br
            tr
               th(scope="col") #
               th First Name
               th Last Name
               th Phone Number 
               th Residence
               th Stage
               th Initial Payment
               th Pending Payment
               th Payment Period
         tbody.text-center
            each customer in allCustomers
               tr
                  th(scope="row") 1
                  td #{customer.firstName}
                  td #{customer.lastName}
                  td #{customer.phone}
                  td #{customer.residence}
                  td #{customer.stageName}
                  td #{customer.initPay}
                  td #{customer.balPay}
                  td #{customer.period}
                  td(colspan="2")
                     form(method="post" action=`/customer/delete/${customer._id}`)
                           input(type="hidden", placeholder="", name="id", value=customer._id)
                           button.btn.btn-dark.btn-block(type="submit") Delete
                  td(colspan="2")
                     form(method="get" action=`/customer/edit/${customer._id}`)
                           input(type="hidden", placeholder="", name="id", value=customer._id)
                           button.btn.btn-dark.btn-block(type="submit") Update


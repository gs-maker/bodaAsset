html
   head
      link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
   body
      h1 Registered Customers
      div
         div
            form.form-inline.my-2.my-lg-0
               input.form-control.mr-sm-2(type="search" placeholder="Search" aria-label="Search")
               button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Search

      table.table
         thead.thead-dark
            br
            tr
               th(scope="col") #
               th First Name
               th Last Name
               th Phone Number 
               th Residence
               th Stage
               th Initial Payment
               th Pending Payment
               th Payment Period
         tbody
            each customer in allCustomers
               tr
                  th(scope="row") 1
                  td #{customer.firstName}
                  td #{customer.lastName}
                  td #{customer.phone}
                  td #{customer.residence}
                  td #{customer.stageName}
                  td #{customer.initPay}
                  td #{customer.balPay}
                  td #{customer.period}
                  td(colspan="2")
                     form(method="post" action=`/customer/delete/${customer._id}`)
                           input(type="hidden", placeholder="", name="id", value=customer._id)
                           button.btn.btn-dark.btn-block(type="submit") Delete
                  td(colspan="2")
                     form(method="get" action=`/customer/edit/${customer._id}`)
                           input(type="hidden", placeholder="", name="id", value=customer._id)
                           button.btn.btn-dark.btn-block(type="submit") Update
